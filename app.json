{
  "expo": {
    "name": "Praxis",
    "slug": "praxis",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.praxis.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Praxis needs access to your photo library so you can upload a profile picture.",
        "NSPhotoLibraryAddUsageDescription": "Praxis needs access to save photos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.praxis.app",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Praxis to use Face ID for secure access."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "praxis"
  }
}
